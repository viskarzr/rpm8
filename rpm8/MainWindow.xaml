<Window x:Class="rpm8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpm8"
        mc:Ignorable="d"
        Title="Сотрудники" Height="550" Width="700" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="199*"></RowDefinition>
            <RowDefinition Height="68*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lbStaff" Margin="10,10,10,10"/>
        <GroupBox Header=" Работа с данными " Grid.Column="1" Margin="10,10,10,10">
            <StackPanel>
                <Label Content="Код:"/>
                <TextBox x:Name="tbCode" TextWrapping="Wrap"  Width="200"/>
                <Label Content="ФИО:"/>
                <TextBox x:Name="tbFullName" TextWrapping="Wrap"  Width="200"/>
                <Label Content="Пол:"/>
                <TextBox x:Name="tbGender" TextWrapping="Wrap"  Width="200"/>
                <Label Content="Должность:"/>
                <TextBox x:Name="tbPost" TextWrapping="Wrap"  Width="200"/>
                <Label Content="Стаж работы:"/>
                <TextBox x:Name="tbExp" TextWrapping="Wrap"  Width="200"/>
                <Label Content="Оклад:"/>
                <TextBox x:Name="tbSalary" TextWrapping="Wrap"  Width="200"/>
                <Button x:Name="btnChange" Content="Изменить" Margin="0,20,0,0" Width="200" Click="btnChange_Click"/>
                <Button x:Name="btnDelete" Content="Удалить" Margin="0,10,0,0" Width="200" Click="btnDelete_Click"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Работа с данными" Grid.Row="1" Margin="10,0,10,10">
            <StackPanel>
                <Label Content="Расчёт ср. значения оклада:"/>
                <TextBox x:Name="tbSal" TextWrapping="Wrap" Width="250" Margin="0,10,0,0" IsReadOnly="True"/>
                <Button x:Name="btnCalc" Content="Расчитать" Margin="0,10,0,0"  Width="250" Click="btnCalc_Click"/>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,59,10,0" VerticalAlignment="Top" Height="60">
            <Button x:Name="btnAbout" Content="О программе" Margin="0,5,0,0" Click="btnAbout_Click"/>
            <Button x:Name="btnExit" Content="Выход" Margin="0,10,0,0" Click="btnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>
